{
  "dashboard": {
    "id": null,
    "uid": "blyan-overview",
    "title": "Blyan Network Overview",
    "tags": ["blyan", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "System Uptime",
        "targets": [
          {
            "expr": "blyan_uptime_seconds",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 3600},
                {"color": "green", "value": 86400}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Daily Active Users",
        "targets": [
          {
            "expr": "blyan_daily_active_users",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Transaction Success Rate",
        "targets": [
          {
            "expr": "rate(blyan_transactions_hourly{status=\"credited\"}[1h]) / (rate(blyan_transactions_hourly{status=\"credited\"}[1h]) + rate(blyan_transactions_hourly{status=\"failed\"}[1h])) * 100",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Active Streams",
        "targets": [
          {
            "expr": "blyan_active_streams",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(blyan_transactions_hourly[5m])",
            "format": "time_series",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "graph",
        "title": "Database Performance",
        "targets": [
          {
            "expr": "blyan_db_pool_size",
            "format": "time_series",
            "legendFormat": "Pool {{state}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "graph",
        "title": "System Resources",
        "targets": [
          {
            "expr": "blyan_cpu_usage_percent",
            "format": "time_series",
            "legendFormat": "CPU %",
            "refId": "A"
          },
          {
            "expr": "(blyan_memory_usage_bytes{type=\"used\"} / blyan_memory_usage_bytes{type=\"total\"}) * 100",
            "format": "time_series",
            "legendFormat": "Memory %",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Usage %",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "graph",
        "title": "Revenue Metrics",
        "targets": [
          {
            "expr": "blyan_daily_revenue_bly",
            "format": "time_series",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "BLY"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 20},
        "type": "table",
        "title": "Database Table Sizes",
        "targets": [
          {
            "expr": "blyan_db_table_size_bytes",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "step": "60s",
          "tagKeys": "severity",
          "textFormat": "{{ alertname }}",
          "titleFormat": "Alert"
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}