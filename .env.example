# Blyan Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# ===== Main Node Configuration =====
# These are CRITICAL security settings - protect them carefully!

# Secret used to register the main node (generate with: python -c "import secrets; print(secrets.token_hex(32))")
BLYAN_MAIN_NODE_SECRET=your-secret-here-never-share-this

# Token received after registering main node (from setup_main_node.py)
BLYAN_MAIN_NODE_TOKEN=your-token-here-never-share-this

# Your node ID (must match what you registered)
BLYAN_NODE_ID=main-do-nyc1

# ===== Security Settings =====
# Toggle authentication enforcement (set to "false" only for local development)
BLYAN_ENFORCE_AUTH=true

# ===== Network Configuration =====
# API server port
API_PORT=8000

# P2P worker node ports (if running worker nodes)
WORKER_PORT_1=8001
WORKER_PORT_2=8002

# ===== Database Configuration =====
# Redis for nonce storage (optional, for wallet auth)
REDIS_URL=redis://localhost:6379

# ===== Model Configuration =====
# Path to models directory
MODEL_PATH=./models

# Path to data directory
DATA_PATH=./data

# ===== Logging Configuration =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/blyan.log

# ===== Performance Settings =====
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ===== AWS/Cloud Configuration (Optional) =====
# For production deployments with AWS KMS
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# KMS_KEY_ID=your-kms-key-id

# ===== MetaMask/Web3 Configuration (Optional) =====
# For wallet authentication
# WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id

# ===== Development/Testing =====
# Enable debug mode (NEVER in production!)
DEBUG=false

# Skip PoL validation (for testing only!)
SKIP_POL_VALIDATION=false
