# Copy this to .env and fill in your values

# Environment
ENVIRONMENT=production

# Security
REDIS_PASSWORD=your_very_secure_redis_password_here
DB_PASSWORD=your_very_secure_db_password_here

# PostgreSQL Configuration (for Ledger)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blyan_ledger
POSTGRES_USER=blyan_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SCHEMA=ledger

# Database Pool Settings
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=10

# Stripe (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_... # Use sk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_... # Use pk_live_... for production

# Ethereum (Optional - for on-chain features)
INFURA_PROJECT_ID=your_infura_project_id

# External APIs (Optional)
OPENAI_API_KEY=sk-...
PERSPECTIVE_API_KEY=...

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password

# Domain (for SSL)
DOMAIN=blyan.network
SSL_EMAIL=admin@blyan.network

# Model Configuration
MODEL_NAME=EleutherAI/gpt-neox-20b  # Or any HuggingFace model
MODEL_QUANTIZATION=8bit  # Options: none, 8bit, 4bit
MODEL_DEVICE_MAP=auto  # auto for multi-GPU, or specific mapping

# Runpod GPU Server (if using separate GPU server)
RUNPOD_API_URL=https://your-runpod-endpoint.runpod.io
RUNPOD_API_KEY=your_runpod_api_key

# Performance Settings
KV_CACHE_SIZE_GB=8
MAX_BATCH_SIZE=4
ENABLE_POL=false  # Disable PoL initially for performance