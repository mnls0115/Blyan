# Blyan Docker Configuration
# Copy this to .env and fill in your values

# REQUIRED: Get your JOIN_CODE from https://blyan.com/contribute
JOIN_CODE=YOUR_CODE_HERE

# Optional: Public IP (auto-detected if not set)
# PUBLIC_IP=1.2.3.4

# Optional: Main node URL (default: production)
# MAIN_NODE_URL=http://165.227.221.225:8000

# Optional: Node configuration
NODE_NAME=my-gpu-node
NODE_PORT=8001

# Optional: Data directory on host (default: /var/lib/blyan/data)
DATA_DIR=/var/lib/blyan/data

# Optional: Model configuration
MODEL_NAME=openai/gpt-oss-20b
MODEL_QUANTIZATION=int8

# Optional: Performance settings
MAX_BATCH_SIZE=4
MAX_SEQUENCE_LENGTH=2048

# Optional: GPU settings (auto-detected)
# CUDA_VISIBLE_DEVICES=0,1